
<%= render 'shared/navbar' %>

<div class="margingtotal2">
  <div class="imageup">
    <div class="card-restaurant-image" style="background-image: url('<%=cl_image_path @restaurant.photo, height: 300, width: 100, crop: :fill  %>')">
      <i class="far fa-heart favorites2 <%= current_user.favorited?(@restaurant) ? "liked" : "" %>" data-id="<%= @restaurant.id %>"></i>
    </div>
  </div>

<div class="container">
  <div class="restaurant-description">
    <div class="titlerestaurant">
      <h3> <%= @restaurant.name %> </h3>
    </div>
    <div class="recommendation">
      <p class="food-trotters">Recommand√© par &nbsp</p>
      <p class="food-trotter"> <%=@restaurant.recommendation %>&nbsp foodtrotters</p>
    </div>
    <div>
      <p class="subtitle">Informations sur le restaurant</p>
      <p><em><i class="fas fa-map-marker-alt icon-mint">&nbsp &nbsp</i></em> <%= @restaurant.address %></p>
      <p><em><i class="fas fa-mobile-alt icon-mint">&nbsp &nbsp</i></em> <%= @restaurant.phone_number%></p>
      <p><em><i class="far fa-clock icon-mint">&nbsp &nbsp</i></em> <%= @restaurant.opening_time %></p>
    </div>
    <div class="map-design">

    <div
      id="map"
      style="width: 100%;
      height: 200px;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
    ></div>
     </div>
    <div class="d-flex justify-content-center" >
    <%= link_to restaurant_map_path(@restaurant) do %>
      <button type="button-go mx-auto" class="btn-go btn-primary btn-lg btn-block active">Go !</button>
    <% end %>
    </div>
  </div>
</div>
</div>

